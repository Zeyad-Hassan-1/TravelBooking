<div class="booking-container">
  <div class="booking-header">
    <h1>Booking Details</h1>
    <div class="booking-id">Booking ID: <%= @booking.id %></div>
  </div>

  <div class="booking-details">
    <div class="detail-row">
      <div class="detail-label">Flight ID:</div>
      <div class="detail-value"><%= @booking.flight_id %></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Passenger Name:</div>
      <div class="detail-value"><%= @booking.passenger_name %></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Passenger Email:</div>
      <div class="detail-value"><%= @booking.passenger_email %></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Passenger Phone:</div>
      <div class="detail-value"><%= @booking.passenger_phone %></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Passenger Address:</div>
      <div class="detail-value"><%= @booking.passenger_address %></div>
    </div>

    <div class="passenger-count">
      <div class="count-box">
        <div class="detail-label">Adults</div>
        <div class="detail-value"><%= @booking.Nadults %></div>
      </div>
      <div class="count-box">
        <div class="detail-label">Children</div>
        <div class="detail-value"><%= @booking.Nkids %></div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Travel Class:</div>
      <div class="detail-value">
        <span class="travel-class <%= @booking.travel_class.downcase %>">
          <%= @booking.travel_class %>
        </span>
      </div>
    </div>
  </div>
</div>
<div class="booking-actions">
  <%= link_to 'Edit Booking', edit_booking_path(@booking), class: 'btn btn-primary' %>
  <%= link_to 'Delete Booking', booking_path(@booking), method: :delete, data: { confirm: 'Are you sure you want to delete this booking?' }, class: 'btn btn-danger' %>
</div>